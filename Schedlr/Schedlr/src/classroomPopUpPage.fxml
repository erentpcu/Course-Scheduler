<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ClassroomPopUpController"
      style="-fx-background-color: white; -fx-padding: 20;">

    <!-- Header -->
    <Label fx:id="classroomNameLabel"
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"
           alignment="CENTER"
           maxWidth="Infinity"/>

    <!-- Schedule Grid -->
    <GridPane fx:id="gridPane"
              gridLinesVisible="true"
              style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;">

        <!-- Column Headers -->
        <columnConstraints>
            <ColumnConstraints minWidth="80" prefWidth="80"/>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
            <ColumnConstraints minWidth="120" prefWidth="120"/>
        </columnConstraints>

        <!-- Headers -->
        <Label text="HOURS"
               GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: center;"
               maxWidth="Infinity" maxHeight="Infinity"/>
        <Label text="MONDAY"
               GridPane.columnIndex="1" GridPane.rowIndex="0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: center;"
               maxWidth="Infinity" maxHeight="Infinity"/>
        <Label text="TUESDAY"
               GridPane.columnIndex="2" GridPane.rowIndex="0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: center;"
               maxWidth="Infinity" maxHeight="Infinity"/>
        <Label text="WEDNESDAY"
               GridPane.columnIndex="3" GridPane.rowIndex="0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: center;"
               maxWidth="Infinity" maxHeight="Infinity"/>
        <Label text="THURSDAY"
               GridPane.columnIndex="4" GridPane.rowIndex="0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: center;"
               maxWidth="Infinity" maxHeight="Infinity"/>
        <Label text="FRIDAY"
               GridPane.columnIndex="5" GridPane.rowIndex="0"
               style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-font-weight: bold; -fx-alignment: center;"
               maxWidth="Infinity" maxHeight="Infinity"/>

        <!-- Time Slots -->
        <Label text="08:30" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-padding: 10; -fx-alignment: center;" maxWidth="Infinity"/>
        <Label text="09:25" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-padding: 10; -fx-alignment: center;" maxWidth="Infinity"/>
        <Label text="10:20" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-padding: 10; -fx-alignment: center;" maxWidth="Infinity"/>
