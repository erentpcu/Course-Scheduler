<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="ClassroomPopUpController" fx:id="gridPane" hgap="10" vgap="10">
    <!-- Header -->
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="8" alignment="CENTER">
        <Label fx:id="classroomNameLabel" text="Classroom Schedule" style="-fx-font-size: 16; -fx-font-weight: bold;" />
    </HBox>

    <!-- Days of the Week -->
    <Label text="HOURS" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label text="MONDAY" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="TUESDAY" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <Label text="WEDNESDAY" GridPane.columnIndex="3" GridPane.rowIndex="1" />
    <Label text="THURSDAY" GridPane.columnIndex="4" GridPane.rowIndex="1" />
    <Label text="FRIDAY" GridPane.columnIndex="5" GridPane.rowIndex="1" />
    <Label text="SATURDAY" GridPane.columnIndex="6" GridPane.rowIndex="1" />
    <Label text="SUNDAY" GridPane.columnIndex="7" GridPane.rowIndex="1" />

    <!-- Time Slots -->
    <Label text="08:30 - 09:25" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label text="09:25 - 10:20" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label text="10:20 - 11:15" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label text="11:15 - 12:10" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Label text="12:10 - 13:05" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <Label text="13:05 - 14:00" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <Label text="14:00 - 14:55" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <Label text="14:55 - 15:50" GridPane.columnIndex="0" GridPane.rowIndex="9" />
</GridPane>