<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="LecturePopUpController" hgap="10" vgap="10">
    <!-- Header -->
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <Label fx:id="lectureNameLabel" text="Lecture Details" style="-fx-font-size: 16; -fx-font-weight: bold;" />
    </HBox>

    <!-- Students List -->
    <Label text="Registered Students:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ListView fx:id="studentsListView" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" />
</GridPane>