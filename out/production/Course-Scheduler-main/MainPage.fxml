<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="Controller">
    <top>
        <MenuBar>
            <Menu text="Helppp">
                <MenuItem text="About" />
            </Menu>
        </MenuBar>
    </top>
    <center>
        <HBox spacing="10" style="-fx-padding: 10;">
            <!-- Students Section -->
            <VBox fx:id="studentsSection" prefWidth="250" spacing="10">
                <Label text="Students" />
                <HBox spacing="5">
                    <TextField fx:id="studentsSearchBar" promptText="Search students..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="studentsAddButton" text="+">
                        <tooltip>
                            <Tooltip text="Add Student" />
                        </tooltip>
                    </Button>
                </HBox>
                <ListView fx:id="studentsListView" />
            </VBox>

            <!-- Classrooms Section -->
            <VBox fx:id="classroomsSection" prefWidth="250" spacing="10">
                <Label text="Classrooms" />
                <HBox spacing="5">
                    <TextField fx:id="classroomsSearchBar" promptText="Search classrooms..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="classroomsAddButton" text="+">
                        <tooltip>
                            <Tooltip text="Add Classroom" />
                        </tooltip>
                    </Button>
                </HBox>
                <ListView fx:id="classroomsListView" />
            </VBox>

            <!-- Lectures Section -->
            <VBox fx:id="lecturesSection" prefWidth="250" spacing="10">
                <Label text="Lectures" />
                <HBox spacing="5">
                    <TextField fx:id="lecturesSearchBar" promptText="Search lectures..." HBox.hgrow="ALWAYS" />
                    <Button fx:id="lecturesAddButton" text="+" onAction="#handleAddLectureButtonAction">
                        <tooltip>
                            <Tooltip text="Add Lecture" />
                        </tooltip>
                    </Button>
                </HBox>
                <ListView fx:id="lecturesListView" />
            </VBox>
        </HBox>
    </center>
</BorderPane>
